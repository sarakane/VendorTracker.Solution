@{
  Layout = "_Layout";
}

<div class="container">
  <h1>Add a Vendor</h1>
  <form action="/vendors" method="post">
    <label for="vendorName">Vendor Name</label>
    <input id="vendorName" name="vendorName" type="text">
    <label for="vendorDescription">Description</label>
    <input id="vendorDescription" name="vendorDescription" type="text">
    <button type="submit" class="btn btn-info">Add</button>
  </form>
  <a href="/" class="badge badge-secondary">Home</a>
  <a href="/vendors" class="badge badge-secondary">Back to Vendors</a>
</div>